{
  "manifest_version": 2,

  "name": "basket",
   "description": "Easily save and share your favorite links!",
   "version": "0.9",

  "permissions": [
    "tabs",
    "*://*/*",
    "http://*/",
    "http://*/*",
    "https://*/*",
    "http://*.facebook.com/*",
    "http://127.0.0.1:3000/*"
  ],

  "background": {
    "scripts": ["background.js"] 
  },
  
  "browser_action": {
    "default_icon": "/icons/icon.png",
    "default_title": "Basket",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "js": ["scripts/jquery.min.js", "scripts/content.js"],
    "matches": ["*://*/*"]
  }], 

  "icons": {
    "16": "/icons/icon.png",
    "48": "/icons/icon.png",
    "128": "/icons/icon.png"
  }

}