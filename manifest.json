{
  "manifest_version": 2,

  "name": "basket",
  "version": "0.9.5",
  "description": "Easily save and share your favorite links!",
  "background": {
    "scripts": ["background.js"] 
  },

  "permissions": [
    "tabs",
    "*://*/*",
    "http://*/",
    "http://*/*",
    "https://*/*",
    "http://*.facebook.com/*",
    "http://127.0.0.1:3000/*"
  ],
  
  "browser_action": {
    "default_icon": "/icons/icon.png",
    "default_title": "Basket",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/jquery.min.js", "content.js"]
    }
  ], 

  "icons": {
    "16": "/icons/icon.png",
    "48": "/icons/icon.png",
    "128": "/icons/icon.png"
  }

}